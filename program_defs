import tkinter as tk


def listar_clientes_programm(root, clients):
    new_window = tk.Toplevel(root)
    new_window.title("cliente list")
    new_window.geometry("600x300")

    frame = tk.Frame(new_window)
    frame.pack(pady=10, fill='both', expand=True)

    vbar = tk.Scrollbar(frame, orient='vertical')
    vbar.pack(side='right', fill='y')

    listbox = tk.Listbox(frame, height=20, width=100,yscrollcommand=vbar.set)
    listbox.pack(pady=10)

    vbar.config(command=listbox.yview)

    for i, client in enumerate(clients, start=1):
        listbox.insert(tk.END, f"{i}. {client}")
