from cliente import Client
from car import Car

def gravar_Cliente(ficheiro, lista_clientes):
    with open(ficheiro, 'w') as f:
        for cliente in lista_clientes:
            f.write(str(cliente)+ '\n')



def carregar_clientes(ficheiro):
    clientes = []
    try:
        with open(ficheiro, 'r') as f:
            for linha in f:
                cliente = Client.from_string(linha)
                clientes.append(cliente)

    except FileNotFoundError:
        print(f'the ficheiro {ficheiro} nao foi encontrado.')
    return clientes



#car
def save_car(filename, cars):
    with open(filename, 'w') as f:
        for car in cars:
            f.write(f"{car.make};{car.model};{car.year};{car.plate};{car.complaint};{car.car_status}\n")

def load_cars(filename):
    try:
        with open(filename, 'r') as f:
            return [
                Car(*line.strip().split(';'))
                for line in f
                if line.strip()
            ]
    except FileNotFoundError:
        return []
